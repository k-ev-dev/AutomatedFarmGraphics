<Window x:Class="Lab3oopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3oopClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="188" Width="200">
    <Canvas x:Name="Canvas" HorizontalAlignment="Center" Width="200">
        <Button x:Name="AddWater" Content="Вода" Height="33" Canvas.Left="28" Canvas.Top="28" Width="62" Click="AddWater_Click"/>
        <Button x:Name="AddGrain" Content="Зерно" Height="33" Canvas.Left="110" Canvas.Top="28" Width="62" Click="AddGrain_Click"/>
        <Button x:Name="AutoOn" Content="Автоматический режим" Height="32" Canvas.Left="28" Canvas.Top="76" Width="144" Click="AutoOn_Click"/>
        <Button x:Name="AutoOff" Content="Ручной режим" Height="32" Canvas.Left="28" Canvas.Top="121" Width="144" Background="GreenYellow" Click="AutoOff_Click"/>
    </Canvas>
</Window>
